<config>
	<modules>
		<Luigifab_Sentry>
			<version>3.0.0</version>
		</Luigifab_Sentry>
	</modules>
	<global>
		<blocks>
			<sentry>
				<class>Luigifab_Sentry_Block</class>
			</sentry>
		</blocks>
		<models>
			<sentry>
				<class>Luigifab_Sentry_Model</class>
			</sentry>
		</models>
	</global>
	<frontend>
		<layout>
			<updates>
				<sentry>
					<file>luigifab/sentry.xml</file>
				</sentry>
			</updates>
		</layout>
	</frontend>
	<adminhtml>
		<events>
			<admin_system_config_changed_section_dev>
				<observers>
					<sentry>
						<class>sentry/client</class>
						<method>updateConfig</method>
					</sentry>
				</observers>
			</admin_system_config_changed_section_dev>
		</events>
		<layout>
			<updates>
				<sentry>
					<file>luigifab/sentry.xml</file>
				</sentry>
			</updates>
		</layout>
	</adminhtml>
	<default>
		<dev>
			<sentry>
				<active>0</active>
				<logger>openmage</logger>
			</sentry>
		</dev>
	</default>
</config>